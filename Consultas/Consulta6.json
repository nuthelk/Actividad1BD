//Consulta
db.Standings.aggregate([
    {
      $lookup: {
        from: "Players",
        localField: "participant_id",
        foreignField: "participant_id",
        as: "player_details"
        }
    },
    {
      $project: {
        position_id: 1,
        points: 1,
        matches_played: 1,
        player_name: { $arrayElemAt: [
                    "$player_details.name",
                    0
                ]
            },
        player_rating: { $arrayElemAt: [
                    "$player_details.elo_rating",
                    0
                ]
            },
        player_country: { $arrayElemAt: [
                    "$player_details.country",
                    0
                ]
            }
        }
    },
    {
      $sort: { points: -1
        }
    }
])

